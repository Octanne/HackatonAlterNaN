#%Module1.0
proc ModulesHelp { } {
    puts stderr "This module loads OpenMPI 4.1.7 compiled with ACFL 24.04."
}

module-whatis "OpenMPI 4.1.7 compiled with ACFL 24.04"

# Paths to OpenMPI
set root /tools/openmpi/4.1.7/acfl/24.04

# Update PATH
prepend-path PATH $root/bin

# Update MANPATH
prepend-path MANPATH $root/share/man

# Update LD_LIBRARY_PATH
prepend-path LD_LIBRARY_PATH $root/lib

# Update PKG_CONFIG_PATH
prepend-path PKG_CONFIG_PATH $root/lib/pkgconfig

# Update INCLUDE paths
prepend-path C_INCLUDE_PATH $root/include
prepend-path CPLUS_INCLUDE_PATH $root/include

# Environment variables for OpenMPI
setenv OMPI_HOME $root
setenv MPI_HOME $root
